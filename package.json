{
  "name": "devguide",
  "version": "1.0.0",
  "private": true,
  "description": "The Developer Guidelines static site built with Hugo",
  "homepage": "https://devguide.trimble.com",
  "bugs": {
    "url": "https://groups.google.com/a/trimble.com/forum/#!forum/dev-guidelines-working-group-ug"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@bitbucket.trimble.tools/trim/devguide.git"
  },
  "license": "private",
  "author": "Trimble",
  "scripts": {
    "build": "npm-run-all lint-css && npx hugo && npm run lint-html",
    "build:dev": "npm-run-all lint-css && npx hugo --config config.yml,config-dev.yml && npm run lint-html",
    "deploy": "cross-env s3-deploy './public/**/*.{css,html,ico,jpg,js,json,map,png,svg,webmanifest,xml}' --cwd './public/' --region us-east-1 --bucket devguidelines",
    "deploy:dev": "cross-env s3-deploy './public/**/*.{css,html,ico,jpg,js,json,map,png,svg,webmanifest,xml}' --cwd './public/' --region us-east-1 --bucket devguidelines",
    "imagemin": "npx imagemin-cli static/img/*.png --out-dir=static/img",
    "lint-css": "stylelint \"assets/css/*.scss\"",
    "lint-html": "htmlhint \"public/**/*.html\"",
    "lint-js": "eslint \"assets/js/*.js\"",
    "lint-links": "npx linkinator https://devguide.trimble.com --recurse --silent --skip https://devguide.trimble.com",
    "lint-markdown": "npx markdownlint content/**/*.md",
    "lint-spellcheck": "npx cspell \"content/**/*.md\"",
    "prettier": "prettier --write \"assets/**/*.*\"",
    "purgecss": "purgecss --css public/css/styles.min.css --content public/**/*.html --output public/css/ --safelist body,btn,dropdown,menu-left,row-cols-2,row-cols-sm-3,sticky-top",
    "serve": "npx hugo serve --port 4000 --disableFastRender",
    "svgo": "npx svgo -f static/img/icons/development-practices/",
    "test": "npm-run-all lint-css && npx hugo && npm run lint-html"
  },
  "devDependencies": {
    "@trimbleinc/modus-bootstrap": "^1.1.0",
    "autoprefixer": "^10.3.1",
    "clipboard": "^2.0.8",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "htmlhint": "^1.0.0",
    "hugo-bin": "^0.79.0",
    "jquery": "^3.6.0",
    "markdownlint-cli": "^0.30.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "purgecss": "^4.1.3",
    "s3-deploy": "^1.4.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0"
  },
  "hugo-bin": {
    "buildTags": "extended"
  }
}
